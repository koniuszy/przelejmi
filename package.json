{
  "name": "invoice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "test": "NODE_ENV=test jest --runInBand",
    "build": "yarn gen && next build",
    "gen": "yarn gen:gql",
    "gen:gql": "graphql-codegen --config codegen.yml",
    "download:local-schema": "rover graph introspect http://localhost:8080/v1/graphql > hasura/schema.graphql",
    "download:prod-schema": "yarn apollo schema:download --endpoint https://przelejemi.hasura.app/v1/graphql > hasura/schema.graphql",
    "ts-check": "tsc -p tsconfig.json",
    "tidy": "eslint --fix --ext .ts,.tsx ."
  },
  "dependencies": {
    "@apollo/client": "^3.5.6",
    "@auth0/auth0-react": "1.8.0",
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "apollo-server-micro": "^3.5.0",
    "easyinvoice": "^2.0.8",
    "formik": "^2.2.9",
    "framer-motion": "^5.5.5",
    "graphql": "^16.2.0",
    "lodash.debounce": "^4.0.8",
    "lottie-react": "^2.1.0",
    "micro": "^9.3.4",
    "next": "12.0.7",
    "nextjs-progressbar": "^0.0.13",
    "nodemailer": "^6.7.2",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "react-pdf": "^5.6.0",
    "sharp": "^0.29.3",
    "ts-node": "^10.4.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.4.1",
    "@babel/core": "^7.16.5",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-operations": "2.2.1",
    "@graphql-codegen/typescript-react-apollo": "3.2.2",
    "@next/eslint-plugin-next": "12.0.7",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^17.0.1",
    "@types/react": "^17.0.37",
    "@types/react-pdf": "^5.0.9",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.5.0",
    "eslint-config-alloy": "4.4.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.27.1",
    "eslint-plugin-react-hooks": "4.3.0",
    "prettier": "2.5.1",
    "typescript": "^4.5.4"
  }
}
